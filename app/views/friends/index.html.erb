<% if user_signed_in? %>
  <br/>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col" colspan="2">Action</th>
      </tr>
    </thead>
    <tbody id="friends">
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td>
              <%= link_to "Edit", edit_friend_path(friend), class:'btn btn-sm btn-outline-secondary' %>
            </td>
            <td>
              <%= button_to "Delete", friend_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:'btn btn-outline-secondary' %>
<% else %>
  <h1>Made with Rails</h1>
  <p>Sign in or sign up to manipulate your list of friends.</p>
<% end %>
